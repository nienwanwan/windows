{
  "name": "Windows 11 Pro",
  "build": {
    "dockerfile": "Dockerfile.codespace"
  },
  "mounts": [
    "source=var-lib-docker,target=/var/lib/docker,type=volume"
  ],
  "forwardPorts": [22, 2222, 3389, 8006],
  "portsAttributes": {
    "22": {"label": "SSH", "onAutoForward": "notify"},
    "2222": {"label": "Windows SSH", "onAutoForward": "notify"},
    "3389": {"label": "RDP", "onAutoForward": "notify"},
    "8006": {"label": "Web", "onAutoForward": "notify"}
  },
  "capAdd": ["ALL"],
  "securityOpt": ["seccomp=unconfined"],
  "runArgs": ["--device=/dev/kvm", "--device=/dev/net/tun", "--privileged"],
  "privileged": true,
  "containerUser": "root",
  "remoteUser": "root",
  "onCreateCommand": "bash .devcontainer/onCreateCommand.sh",
  "postStartCommand": "bash .devcontainer/postStartCommand.sh"
}
